<% if @book.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <div><strong><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</strong></div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-4 mx-auto">
    <h1>Editing Book</h1>
    <%= form_with model: @book, local:true do |f| %>
      <p>Title <br/> <%= f.text_field :title %> </p>
      <p>Opinion <br/> <%= f.text_area :body %> </p>
      <p><%= f.submit 'Update Book', class:'btn btn-success' %></p>
    <% end %>

    <%= link_to 'Show' , book_path %> | <%= link_to 'Back', books_path %>
</div>
