<% if @book.errors.any? %>
  <div class="alert">
    <div><strong><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</strong></div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid">
  <div class="col-md-8 mx-auto">
    <h1 class="mt-3">Editing Book</h1>

    <%= form_with model: @book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Update Book' %></p>
    <% end %>
    </div>

    <div><%= link_to 'Show' , book_path %> | <%= link_to 'Back', books_path %></div>
  </div>
</div>