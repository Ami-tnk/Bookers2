<!--booksエラーメッセージ-->
<%= render 'books/errormessage' %>

<div class="container-fluid">
  <div class="row">
    <div class="row-md-4 mx-auto">
      <div class="col">
      <!--ユーザ情報挿入-->
      <%= render 'users/userinfo', user: @user %>
      </div>
      <div class="col">
     <!--新規投稿フォーム挿入-->
      <%= render 'books/newform', booknew: @booknew %>
      </div>
    </div>

    <div class="row-md-8 mx-auto">
      <div class="col">
        <h1>Books</h1>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user_id)  do %>
                <%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
        <%= paginate @books %>
      </div>
    </div>
  <div>
