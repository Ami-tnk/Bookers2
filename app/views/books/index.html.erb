<!--booksエラーメッセージ-->
<%= render 'books/errormessage' %>

<div class="container-fluid">
  <div class="row">
    <div class="row-md-4 mx-auto">
      <div class="col">
      <!--ユーザ情報挿入-->
      <%= render 'users/userinfo' %>
      </div>
      <div class="col">
      <!--新規投稿フォーム挿入-->
      <%= render template: "books/_new" %>
      </div>
    </div>

    <div class="row-md-8 mx-auto">
      <div class="col">
        <h1>Books</h1>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
