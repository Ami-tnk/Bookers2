<!--新規投稿投稿エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="alert">
    <div><strong><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</strong></div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-4 mx-auto">
  <!--ユーザ情報挿入-->
  <div class="col mb-3">
    <%= render 'users/userinfo', user: @user %>
  </div>
  <!--新規投稿フォーム挿入-->
  <div class="col mt-3">
    <%= render 'books/newform', booknew: @book %>
  </div>
</div>

<div class="col-md-8 mx-auto">
  <div class="col">
    <h2>Books</h2>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user_id)  do %>
            <%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
