<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">
    <!--新規投稿投稿エラーメッセージ-->
    <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <div><strong><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</strong></div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <div class="row">
    <div class="col-md-3">
      <!--ユーザ情報挿入-->
      <div class="col mb-3">
      <%= render 'users/userinfo', user: @user %>
      </div>
      <!--新規投稿フォーム挿入-->
      <div class="col mt-3">
      <%= render 'books/newform', booknew: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user_id)  do %>
              <%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td>
            <% if book.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(id: book.id, book_id: book.id), method: :delete do %>
                ♥<%= book.favorites.count %>
              <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_favorites_path(id: book.id, book_id: book.id), method: :post do %>
                ♡<%= book.favorites.count %>
              <% end %>
              </p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>
