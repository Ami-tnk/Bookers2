<!--新規投稿フォーム挿入-->
<%= render template: "books/_new" %>

<h1>Books</h1>
 <!--表の作成-->
    <table class="book-table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, size:"60x60", fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
