<h1>Books</h1>
 <!--表の作成-->
    <table class="book-table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
     </tr>
      <% end %>
    </table>

  <!--新規投稿フォーム挿入-->
  <%= render template: "books/_new" %>

