<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザ情報挿入-->
      <div class="col mb-3">
        <%= render 'users/userinfo', user: @user %>
      </div>

      <!--新規投稿フォーム挿入-->
      <div class="col mt-3">
        <%= render 'books/newform', booknew: @booknew %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %><br/>
              <%= @book.user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title, book_path(params[:id]) %></td>
          <td><%= @book.body %></td>
          <td>
           <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), class: "text-danger", method: :delete do %>
              <i class="fas fa-heart"></i><%= @book.favorites.count %>
            <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
              <i class="fas fa-heart"></i><%= @book.favorites.count %>
            <% end %>
           <% end %>
          </td>
          <td>
            <p>コメント数：<%= @book.book_comments.count %></p>
          </td>

          <% if @book.user == current_user %>
          <td><%= link_to 'Edit',  edit_book_path(params[:id]), class:'btn btn-sm btn-success' %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, class:'btn btn-sm btn-danger', "data-confirm" => "本当に消しますか?" %></td>
          <% end %>
        </tr>
      </table>

      <div class="comments col-6">
        <% @book.book_comments.each do |book_comment| %>
        <table class="table">
        <tr>
          <td><%= link_to user_path(book_comment.user.id) do %>
              <%= attachment_image_tag book_comment.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %><br/>
              <%= book_comment.user.name %>
              <% end %>
          </td>
          <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
          <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete,class:'btn btn-sm btn-danger' %></td>
        <% end %>
        </table>
        <% end %>
      </div>

      <div class="new-comment col">
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <div class="form-group">
        <%= f.text_area :comment, class: 'form_control col-12'%>
        </div>
        <%= f.submit "送信する" %>
      <% end %>
      </div>

  </div>
</div>
