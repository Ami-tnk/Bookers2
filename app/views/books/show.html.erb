<h1>Book detail</h1>

  <table class="book-table">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <tr>
      <td><%= @book.user.name %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to 'Edit',  edit_book_path(params[:id]) %></td>
        <td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% end %>
   </tr>
  </table>
