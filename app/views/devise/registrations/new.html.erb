<!-- JPOSTAL -->
<script src="//jpostal-1006.appspot.com/jquery.jpostal.js" type="text/javascript"></script>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <!--test-->
        <!--<script>-->
        <!--  console.log("Hello world");-->
        <!--</script>-->
        <!--test-->

        <div class="field ">
          <%= f.label :postcode, 'Postal code' %><br />
          <%= f.text_field :postcode, autocomplete: 'postal-code', class:"postcode", id:"address_zipcode" %>
        </div>
        <div class="field">
          <%= f.label :prefecture_code, 'Prefecture code' %><br />
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class:"address form-control" %>
        </div>
        <div class="field">
          <%= f.label :address_city, 'City' %><br />
          <%= f.text_field :address_city, autocomplete: 'address_city', class:"address form-control", id:"address_city" %>
        </div>
        <div class="field">
          <%= f.label :address_street, 'Street' %><br />
          <%= f.text_field :address_street, autocomplete: 'address_street', class:"address form-control", id:"address_street" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="btn px-0">
          <%= f.submit "Sign up", class:'btn btn-success'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

