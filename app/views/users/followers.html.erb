<h1>Follower Users</h1>

<% if @users.count == 0 %>
  <p>ユーザーはいません</p>
<% else %>
<table class="table">
  <tr>
    <th>Image</th>
    <th>name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, size:"30x30", format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td><%= user.name %></td>
    <td>フォロー数: <%= user.followers.count %></td>
    <td>フォロワー数: <%= user.followers.count %></td>
    <td><%= link_to "Show", user_path(user.id) %></td>
  </tr>
  <% end %>
</table>
<% end %>