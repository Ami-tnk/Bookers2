<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザ情報挿入-->
      <div class="col mb-3">
        <%= render 'users/userinfo', user: @user %>
      </div>
      <!--新規投稿フォーム挿入-->
      <div class="col mt-3">
        <%= render 'books/newform', booknew: @booknew %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
    <!--book一覧-->
      <h2>Books</h2>
        <table class= "table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
        <%= paginate @books %>
    </div>
  </div>
</div>