<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, size:"60x60", fallback:"no_image.jpg" %>
  <h3>name</h3>
    <%= @user.name %>
  <h3>Introduction</h3>
    <%= @user.introduction %>
</div>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<!--新規投稿フォーム挿入-->
<%= render template: "books/_new" %>

<!--book一覧-->
<h1>Books</h1>
<table class="book-table">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
<%= paginate @books %>