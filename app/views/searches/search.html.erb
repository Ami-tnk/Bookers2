<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">

      <% if @model=="user" %>
      <h2>Users search for '<%= @value %>'</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Name</th>
          <th>Introduction</th>
          <th></th>
        </tr>
        <% @datas.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>

      <% elsif @model=="book" %>
      <h2>Books search for '<%= @value %>'</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @datas.each do |book| %>
        <tr>
          <td>
            <%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
      <%end%>
    </div>
  </div>
</div>